<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Warehouse.MainWindow"
        Title="Склад">
    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Left">

        <TextBox Width="200"
                 Watermark="Название"
                 Height="10"
                 Margin="10, 15, 0, 0"/>

        <TextBox Width="100"
                 Height="10"
                 Watermark="Количество"
                 Margin="5, 15, 0, 0"/>
        
        <Button Content="Добавить"
                Width="100"
                Height="30"
                Background="Green"
                Foreground="White"
                Margin="5, 15, 0, 0"/>
        
        <Button Content="Удалить"
                Width="100"
                Height="30"
                Background="Red"
                Foreground="White"
                Margin="5, 15, 0, 0"/>
        
        <Button Content="Передать"
                Width="100"
                Height="30"
                Background="CornflowerBlue"
                Foreground="White"
                Margin="5, 15, 0, 0"/>
        
        <Button Content="Переключить вид"
                Width="150"
                Height="30"
                Background="SlateGray"
                Foreground="White"
                Margin="5, 15, 0, 0"/>

    </StackPanel>

    
</Window>
